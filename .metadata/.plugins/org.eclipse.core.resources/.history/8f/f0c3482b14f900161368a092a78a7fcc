package c2g2.game;

public class PositionLock {

	private float moveStep = 0;

	public PositionLock(){
		
	}
	
	public void increment(float step){
		moveStep+=step;
	}
	
	public boolean canMove(){
		if(moveStep>-2.0f && moveStep<2.0f)
			return true;
		return false;
	}
	
	public void free(){
		moveStep = 0;
	}
}
